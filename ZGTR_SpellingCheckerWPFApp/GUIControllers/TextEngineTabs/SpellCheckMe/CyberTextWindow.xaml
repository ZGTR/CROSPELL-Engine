<Window x:Class="ZGTR_CROSPELLSpellingCheckerApp.GUIControllers.TextEngineTabs.SpellCheckMe.CyberTextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CyberTextWindow" mc:Ignorable="d" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        Width="648" d:DesignHeight="335" SizeToContent="Height">
    <Grid Background="#FF5F5F5F">
        <StackPanel>
            <Border Padding="5" Margin="4" BorderBrush="White">
            <ScrollViewer Height="231">
                <TextBlock Name="tblCTWTextArea" TextWrapping="Wrap" Background="#FFC1C1C1" FontSize="12" FontFamily="Gill Sans MT"></TextBlock>
            </ScrollViewer>
            </Border>
            <Button Name="bCTWCorrect" HorizontalAlignment="Right" Height="22" Width="120" Click="bCTWCorrect_Click" FontFamily="Gill Sans MT">Correct With Keymap</Button>
            <Button Name="bCTWDoneEditing" HorizontalAlignment="Right" Height="22" Width="120" Click="bCTWDoneEditing_Click" FontFamily="Gill Sans MT">Done Editing</Button>
        </StackPanel>
    </Grid>
</Window>
